{% extends "template.twig" %}

{% block baseUrl %}
<base href="{{baseUrl}}">
{% endblock %}

{% block info %}
<div class="row">
    <p id="titre_home" class="col-12 text-center">
        Ici c'est la page d'info sur un film en particulier !
    </p>
</div>
{% endblock %}


{% block affichage %}
<header class="row">
    <div class="col-12 text-center p-4">
        {% for films in list %}
        <h2>
            {{films.titre}}
        </h2>
        {% endfor %}
    </div>
</header>
<article class="row">
    {% for films in list %}
    <div class="film_fiche col-3 p-4 d-flex justify-content-center">
        <img src="/{{films.jaquette}}" width="187.5px" height="250px">
    </div>
    <div class="col-9 p-4">
        <p>{{films.synopsis}}</p>
        <p>{{films.genre}}</p>
        <p>{{films.ann√©e}}</p>
        <p>{{film.note}}</p>
    </div>
    {% endfor %}
</article>
<div class="row">
    <h3 class="col-12 text-center p-4">Bande-annonce</h3>
</div>
<article class="row p-4">
    {% for film in list %}
    <div class="col-12 pb-4 d-flex justify-content-center">
        <iframe width="560" height="315" src="{{film.trailer}}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen></iframe>
    </div>
    {% endfor %}
</article>
{% endblock %}