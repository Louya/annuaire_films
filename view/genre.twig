{# indique la déoendance au fichier template.twig #}
{% extends "template.twig" %}

{# bloque qui met à jour l'url de base en fonction du pc ou on se trouve #}
{% block baseUrl %}
<base href="{{baseUrl}}">
{% endblock %}

{# bloque qui affiche les infos sur la section active #}
{% block info %}
<div class="row">
    <p id="titre_home" class="col-12 text-center">
        La liste des films par genre
    </p>
</div>
{% endblock %}

{# bloque d'affichage principale qui affiche les films par genre #}
{% block affichage %}
{# titre de la section #}
<header class="row my-3">
    <div class="col-12 text-center m-4">
        <h2>
            Liste des films par genres
        </h2>
    </div>
    {# filtre par genre #}
    <div class="col-12 d-flex justify-content-center align-items-center">
        <p class="m-0 p-2 filtre-type">Filtrer par titre : </p>
        <a class="px-3 py-2 filtre-select" href="genre/display">All</a>
        <a class="px-3 py-2 filtre-select" href="genre/display/action">Action</a>
        <a class="px-3 py-2 filtre-select" href="genre/display/animation">Animation</a>
        <a class="px-3 py-2 filtre-select" href="genre/display/aventure">Aventure</a>
        <a class="px-3 py-2 filtre-select" href="genre/display/comedie">Comédie</a>
        <a class="px-3 py-2 filtre-select" href="genre/display/drame">Drame</a>
        <a class="px-3 py-2 filtre-select" href="genre/display/policier">Policier</a>
        <a class="px-3 py-2 filtre-select" href="genre/display/science-fiction">Science Fiction</a>
        <a class="px-3 py-2 filtre-select" href="genre/display/thriller">Thriller</a>
    </div>
</header>

{% for genre in listGenre %}

<header class="genre-card row d-flex justify-content-center align-items-center">
    <h2>{{genre.genre}}</h2>
</header>
<article class="row">
    <div class="col-12 d-flex flex-wrap justify-content-center py-3">
        {% for film in listFilms %}
        {% if film.genre == genre.genre %}
        <div class="film_stamp p-0 m-2 d-flex flex-column align-items-center">
            <a href="fiche/display/{{film.id}}"><img src="{{film.jaquette}}" width="187.5px" height="250px"></a>
            <a class="py-2" href="fiche/display/{{film.id}}">{{film.titre}}</a>
        </div>
        {% endif %}
        {% endfor %}
    </div>
</article>
{% endfor %}
{% endblock %}